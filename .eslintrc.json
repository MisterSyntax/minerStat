{
    "env": {
        "node": true,
        "es6": true
    },
    "extends": ["eslint:recommended",
    "plugin:react/recommended"],
    "parserOptions": {
        "sourceType": "module"
    },
    "parser": "babel-eslint",
    "rules": {
        "indent": [
            "error",
            4
        ],
        "linebreak-style": [
            "error",
            "windows"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "always"
        ]
    },
    "plugins": [
        "import",
        "jest",
        "react"
    ]
}
